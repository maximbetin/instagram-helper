# Instagram Helper Environment Configuration
# Copy this file to .env and modify as needed

# Browser settings
BROWSER_DEBUG_PORT=9222
BROWSER_LOAD_DELAY=2
BROWSER_LOAD_TIMEOUT=10000
# BROWSER_PATH="/usr/bin/brave-browser"  # Uncomment and set your browser path

# Instagram settings
INSTAGRAM_MAX_POST_AGE=3
INSTAGRAM_MAX_POSTS_PER_ACCOUNT=3
INSTAGRAM_URL="https://www.instagram.com/"

# Output settings
# OUTPUT_DIR="/path/to/output"  # Uncomment and set custom output directory
# LOG_DIR="/path/to/logs"       # Uncomment and set custom log directory
TIMEZONE_OFFSET=2

# Development settings (optional)
# PYTHONPATH="."  # Uncomment if you need to set Python path
