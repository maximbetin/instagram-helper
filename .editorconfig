# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files - aligned with ruff configuration (line-length = 88)
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# Python test files - same as Python files
[tests/*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# HTML files
[*.html]
indent_style = space
indent_size = 2
max_line_length = 120

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# YAML files
[*.yml]
[*.yaml]
indent_style = space
indent_size = 2

# Git configuration
[.gitignore]
indent_style = space
indent_size = 2
